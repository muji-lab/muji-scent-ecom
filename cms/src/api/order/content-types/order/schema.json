{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "customerName": {
      "type": "string"
    },
    "customerEmail": {
      "type": "email"
    },
    "shippingAddress": {
      "type": "text"
    },
    "items": {
      "type": "json"
    },
    "totalAmount": {
      "type": "decimal"
    },
    "paymentMethod": {
      "type": "enumeration",
      "enum": [
        "cod",
        "stripe",
        "paypal"
      ]
    },
    "paymentStatus": {
      "type": "enumeration",
      "default": "pending",
      "enum": [
        "pending",
        "paid",
        "failed"
      ]
    },
    "orderStatus": {
      "type": "enumeration",
      "default": "new",
      "enum": [
        "new",
        "processing",
        "shipped",
        "delivered",
        "cancelled"
      ]
    }
  }
}
